<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFragment">

    <TextView
        android:id="@+id/lastplans_text"
        android:text="Last plans added..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp" />

    <ListView
        android:id="@+id/lastplans_listview"
        android:layout_below="@+id/lastplans_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

    <LinearLayout
        android:id="@+id/mainlinear_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="bottom|center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Post a Plan!"/>

            <ImageButton
                android:id="@+id/newact_button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/icon_new_act"
                android:layout_marginRight="70dp"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Join a Plan!"/>

        <ImageButton
            android:id="@+id/browact_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/icon_brows_act"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
